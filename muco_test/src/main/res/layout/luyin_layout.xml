<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/luyin_form"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:text="文件名称：" />

            <EditText
                android:id="@+id/file_name"
                android:layout_height="wrap_content"
                android:text="文件1" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:text="存储路径：" />

            <EditText
                android:id="@+id/url"
                android:layout_height="wrap_content"
                android:hint="保存在内存卡中，无需修改" />
        </TableRow>


    </TableLayout>


</RelativeLayout>