<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_circle_indicator_stroke_color"
    android:orientation="vertical"
    tools:context="com.dr.rui.sotired.Activity.Activity_First_Page">

    <include layout="@layout/tab"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listView_information"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_yueqizhishi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/yueqizhishi" />

        <ImageView
            android:id="@+id/imageView_ziwopingjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ziwopingjia" />

        <ImageView
            android:id="@+id/imageView_moniyanzou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/moniyanzou" />

        <ImageView
            android:id="@+id/imageView_guanyuwomen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/guanyuwomen" />
    </LinearLayout>
</LinearLayout>
