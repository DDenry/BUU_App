<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_instrument_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:textColor="#8E2323"
                android:textSize="36dp" />

            <ImageView
                android:id="@+id/imageView_spe_main"
                android:layout_width="match_parent"
                android:layout_height="200dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:background="#D8D8BF"
                android:text=" 结 构 "
                android:textColor="#8E2323"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView_instrument_brief_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#8E2323"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView_instrument_struct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="12dp"
                android:padding="5dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="#D8D8BF"
                android:text=" 历 史 "
                android:textColor="#8E2323"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView_instrument_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#8E2323"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="#D8D8BF"
                android:text=" 乐队位置 "
                android:textColor="#8E2323"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView_instrument_position"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>