<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="8"
    android:orientation="vertical"
    tools:context="com.dr.rui.sotired.Activity.Activity_Choice">

    <include layout="@layout/tab"></include>

    <ImageView
        android:id="@+id/imageView_choice_occident"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dip"></View>

    <ImageView
        android:id="@+id/imageView_choice_nation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_yueqizhishi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/yueqizhishi" />

        <ImageView
            android:id="@+id/imageView_ziwopingjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ziwopingjia" />

        <ImageView
            android:id="@+id/imageView_moniyanzou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/moniyanzou" />

        <ImageView
            android:id="@+id/imageView_guanyuwomen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/guanyuwomen" />
    </LinearLayout>
</LinearLayout>
