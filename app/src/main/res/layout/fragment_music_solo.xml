<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_test_single_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="\t\t\t\t 1、请听这一段音乐，判断该录音是由哪一种乐器演奏的。"
        android:textSize="20dp"
        android:textStyle="bold" />


    <View
        android:layout_width="match_parent"
        android:layout_height="6dip"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/imageView_test_single_music"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/zhizhenguangpan" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dip"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_test_music_choice_A"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/unselected"
                android:gravity="center"
                android:text="A"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_test_single_choice_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="大号"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_test_music_choice_B"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/unselected"
                android:gravity="center"
                android:text="B"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_test_single_choice_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="小号"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_test_music_choice_C"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/unselected"
                android:gravity="center"
                android:text="C"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_test_single_choice_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="小提琴"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>