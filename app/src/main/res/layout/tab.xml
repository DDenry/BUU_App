            android:textColor="#a12a2e"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_guide4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#a12a2e"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
