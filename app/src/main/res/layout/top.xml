<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_circle_indicator_stroke_color"
    android:gravity="left|center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            android:padding="3dp"
            android:scaleType="fitStart"
            android:src="@drawable/logo_copy" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <TextView
                android:id="@+id/textView_test_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_test_guide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#a12a2e"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_test_guide1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#a12a2e"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_test_guide2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#a12a2e"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_test_guide3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#a12a2e"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_test_guide4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#a12a2e"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:background="@android:color/white"></View>
</LinearLayout>