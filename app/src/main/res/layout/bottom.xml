<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:background="@color/vpi__bright_foreground_disabled_holo_light"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1.2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_yueqizhishi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:padding="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/yueqizhishi" />


        <ImageView
            android:id="@+id/imageView_ziwopingjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:padding="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/ziwopingjia" />


        <ImageView
            android:id="@+id/imageView_moniyanzou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:padding="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/moniyanzou" />


        <ImageView
            android:id="@+id/imageView_guanyuwomen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:padding="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/guanyuwomen" />
    </LinearLayout>
</LinearLayout>
