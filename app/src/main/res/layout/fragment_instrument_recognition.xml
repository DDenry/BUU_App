<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/textView_test_recognition_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="top"
            android:text="\t\t\t\t 二胡在下列哪个位置上？"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView_test_recognition"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dip"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_test_recognition_choice_A"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/unselected"
                android:gravity="center"
                android:text="A"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_test_recognition_choice_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="古琴"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_test_recognition_choice_B"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/unselected"
                android:gravity="center"
                android:text="B"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_test_recognition_choice_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="三弦"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_test_recognition_choice_C"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/unselected"
                android:gravity="center"
                android:text="C"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_test_recognition_choice_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="阮"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_test_recognition_choice_D"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/unselected"
                android:gravity="center"
                android:text="D"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_test_recognition_choice_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="三弦"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
