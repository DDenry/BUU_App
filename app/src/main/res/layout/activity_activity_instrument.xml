<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_circle_indicator_stroke_color"
    tools:context="com.dr.rui.sotired.Activity.Activity_Instrument">

    <!--<ImageView-->
    <!--android:id="@+id/imageView_instrument_big"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="120dp"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:background="@drawable/blue_bc"-->
    <!--android:scaleType="centerCrop" />-->

    <include layout="@layout/title"></include>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:stretchColumns="0,1,2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/button_specification"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_toggle"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/button_music"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_toggle_music"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/button_skill"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/selector_toggle_video"
                android:textOff=""
                android:textOn="" />

        </LinearLayout>

    </TableLayout>

    <FrameLayout
        android:id="@+id/fragmentLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tableLayout"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_xiao"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:padding="5dp"
                android:scaleType="fitCenter" />
            <!--<com.flaviofaria.kenburnsview.KenBurnsView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/kenBurnsView_instrument"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"></com.flaviofaria.kenburnsview.KenBurnsView>-->

            <TextView
                android:id="@+id/textView_instrument_brief"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left|center_vertical|top"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textSize="22dp" />
        </LinearLayout>
    </FrameLayout>


</RelativeLayout>
