<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <include layout="@layout/test_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_test_music_tutti_question_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingTop="2dp"
            android:text="1."
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView_test_music_tutti_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="请听这一段音乐，判断该录音是由哪几种乐器演奏的。"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView_test_music_tutti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/zhizhenguangpan" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:padding="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/imageView_test_music_tutti_choice_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_btn_search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="15dp"
                    android:text="大号"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/imageView_test_music_tutti_choice_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_btn_search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="15dp"
                    android:text="小号"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/imageView_test_music_tutti_choice_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_btn_search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="15dp"
                    android:text="小号"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/imageView_test_music_tutti_choice_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_btn_search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="15dp"
                    android:text="小提琴"
                    android:textSize="20dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
