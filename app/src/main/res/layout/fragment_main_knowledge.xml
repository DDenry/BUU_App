<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout_main_knowledge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/select_musical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_main_knowledge_nation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="民族乐器"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView_main_knowledge_occident"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="西洋乐器"
            android:textSize="24dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout_main_knowledge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"></FrameLayout>

</LinearLayout>
